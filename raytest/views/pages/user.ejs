<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../common/links.ejs') %>
</head>

<body>
  <!-- ======= Header ======= -->
  <%- include('../components/header.ejs') -%>

    <%- include('../components/sidebar.ejs') -%>
      <main id="main" class="main">

        <div class="pagetitle">
          <nav>
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item">Music List</li>
            </ol>
          </nav>
        </div><!-- End Page Title -->

        <section class="section">
          <div class="row">
            <div class="col-lg-12">

              <div class="card">
                <div class="card-body">
                  <div class="row">
                    <div class="col-md-6">
                      <h5 class="card-title">User List</h5>
                    </div>
                    <div class="col-md-4"></div>
                    <div class="col-md-2">
                      <button type="button" class="btn btn-primary m-2" data-bs-toggle="modal"
                        data-bs-target="#userModal">
                        <i class="bi bi-person-plus"></i>
                        Add User
                      </button>
                    </div>
                  </div>

                  <table class="table datatable tbl_user">
                    <thead>
                      <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Phone</th>
                        <th>Gender</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>

                    </tbody>
                  </table>

                  <div class="modal fade" id="userModal" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title">Create User</h5>
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                          <form id="frmUserCreate">
                            <div class="row mb-3">
                              <label for="inputText" class="col-sm-4 col-form-label">User Name</label>
                              <div class="col-sm-8">
                                <input type="text" class="form-control" id="user_name" name="user_name"
                                  placeholder="Enter user Name">
                              </div>
                            </div>
                            <div class="row mb-3">
                              <label for="inputText" class="col-sm-4 col-form-label">User Phone</label>
                              <div class="col-sm-8">
                                <input type="text" class="form-control" id="user_phone" name="user_phone"
                                  placeholder="Enter Phone">
                              </div>
                            </div>

                            <div class="row mb-3">
                              <label for="inputDate" class="col-sm-4 col-form-label">Gender</label>
                              <div class="col-sm-8">
                               <select name="gender" class="form-select" id="gender">
                                  <option value="" selected>Select Gender</option>
                                  <option value="Male">Male</option>
                                  <option value="Female">Female</option>
                               </select>
                              </div>
                            </div>
                            <div class="modal-footer justify-content-center">
                              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                              <button type="submit" class="btn btn-primary">Create</button>
                            </div>
                          </form>
                        </div>
                      </div>
                    </div>
                  </div>

                  <div class="modal fade" id="userEditMoadl" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title">Edit User</h5>
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                          <form id="frmUserEdit">
                            <div class="row mb-3">
                              <label for="inputText" class="col-sm-4 col-form-label">User ID</label>
                              <div class="col-sm-8">
                                <input type="text" name="edit_user_id" id="edit_user_id" class="form-control" readonly>
                              </div>
                            </div>
                            <div class="row mb-3">
                              <label for="inputText" class="col-sm-4 col-form-label">User Name</label>
                              <div class="col-sm-8">
                                <input type="text" name="edit_user_name" id="edit_user_name" class="form-control">
                              </div>
                            </div>
                            <div class="row mb-3">
                              <label for="inputDate" class="col-sm-4 col-form-label">Released Date</label>
                              <div class="col-sm-8">
                                <select name="edit_gender" class="form-select" id="edit_gender">
                                  <option value="" selected>Select Gender</option>
                                  <option value="Male">Male</option>
                                  <option value="Female">Female</option>
                               </select>
                              </div>
                            </div>
                            <div class="modal-footer justify-content-center">
                              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                              <button type="submit" class="btn btn-primary">Update</button>
                            </div>
                          </form>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

            </div>
          </div>
        </section>

      </main><!-- End #main -->


      <!-- ======= Footer ======= -->
      <%- include('../components/footer.ejs') -%>

        <%- include('../common/scripts.ejs') %>
          <script src="/javascripts/user.js"></script>
</body>

</html>